

<% @recipe.each_slice(3) do |recipes| %>
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to recipe do %>
              <%= image_tag recipe.image.url(:medium) %>
            <% end %>
          </div>
          <h2>
            <%= link_to recipe.description, recipe %>
          </h2>
          <h4>
           <span class="label label-success">
            <%= recipe.created_at.strftime("%b %d, %Y") %>
            </span>
          </h4>
          
        </div>
      </div>
    <% end %>
    
  </div>
 
<% end %>
